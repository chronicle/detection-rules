rule gcp_vpc_network_changes {
  meta:
    author = "Google Cloud Security"
    description = "Ensure that the log metric filter and alerts exist for VPC network changes."
    severity = "LOW"
    implementation = "Add exclusions as required."
    cis_version = "1.2"
    cis_control = "2.9"
    tactic = "TA0005"
    technique = "T1578"

  events:
    $gcp.metadata.vendor_name = "Google Cloud Platform"
    $gcp.metadata.product_event_type = /beta.compute.networks.(?:insert|patch)|v1.compute.networks.(?:delete|removePeering|addPeering)/
    $gcp.security_result.action = "ALLOW"

    //capture variables
    $gcp.target.resource.name = $resourceName
    $gcp.target.resource_ancestors.name = $projectName

    //exclusions
    //not $gcp.principal.user.email_addresses = /add_excluded_accounts_here/

  match:
    $resourceName, $projectName over 5m

  condition:
    $gcp
}
