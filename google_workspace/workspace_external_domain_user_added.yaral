rule workspace_external_domain_user_added {
  meta:
    author = "Google Cloud Security"
    description = "permissions_granted_to_non_domain_user."
    severity = "LOW"

  events:
    $workspace.metadata.vendor_name = "Google Workspace"
    $workspace.metadata.product_event_type = "ADD_GROUP_MEMBER"
    $workspace.about.labels.key = "USER_EMAIL"
    //Please replace @YOURDOMAIN with your actual domain
    not $workspace.about.labels.value = /@YOURDOMAIN/ nocase

  condition:
    $workspace
}
